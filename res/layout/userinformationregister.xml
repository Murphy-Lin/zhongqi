<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/activity_evaluate1"
    >
    
   <ImageView 
       android:id="@+id/iv_register_back"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentRight="true"
       android:layout_marginTop="40dp"
       android:layout_marginRight="15dp"
       android:src="@drawable/evaluate_back"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/iv_register_back"
        android:layout_marginBottom="55dp"
        android:layout_marginTop="13dp"
        android:gravity="center" >

        <LinearLayout
            android:id="@+id/ll_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/ll_tel"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="姓名"
                android:gravity="right"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/et_username"
                android:layout_width="200dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_IDCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_username"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
             >

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="身份证号"
                android:gravity="right"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/et_IDCard"
                android:layout_width="200dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/ll_IDCard"
            android:layout_below="@+id/ll_IDCard"
            android:layout_marginTop="23dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="手机"
                android:gravity="right"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/et_tel"
                android:layout_width="200dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
      

         <LinearLayout
            android:id="@+id/ll_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/ll_IDCard"
            android:layout_below="@+id/ll_tel"
            android:layout_marginTop="23dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="年龄"
                android:gravity="right"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/et_age"
                android:layout_width="200dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        
           <RadioGroup 
            android:id="@+id/radioGroup" 
            android:contentDescription="性别" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="60dp"
            android:layout_below="@id/ll_age">
     		<RadioButton 
     		    android:layout_width="wrap_content" 
     		    android:layout_height="wrap_content" 
     		    android:id="@+id/radioMale" 
     		    android:text="男性" 
     		    android:checked="true">
     		</RadioButton>   
     		
     		<RadioButton
            android:id="@+id/radioFemale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/radioGroup"
            android:layout_toRightOf="@+id/radioGroup"
            android:text="女性" />
		</RadioGroup>

           <Button 
               android:id="@+id/btn_register"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="提交注册"
               android:layout_marginLeft="90dp"
               android:layout_below="@id/radioGroup"/>
           
    </RelativeLayout>
    
    

</RelativeLayout>
