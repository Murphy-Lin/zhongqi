<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/evaluating_activity" 
    android:gravity="center">

    <LinearLayout
        android:id="@+id/ll_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/et_license"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="请输入您的激活码"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_activation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="激活" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ll_register"
        android:layout_below="@+id/ll_register"
        android:layout_marginLeft="83dp"
        android:orientation="vertical" >

        <ProgressBar
            android:id="@+id/pb_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_splash_updateinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="升级"
            android:textColor="#000000"
            android:textSize="20sp" />
    </LinearLayout>

</RelativeLayout>