<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:layout_marginLeft="50dp"
    android:layout_marginTop="50dp"
    >
    
    <LinearLayout 
        android:id="@+id/ll_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        
        <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="版本号"
	        android:layout_marginTop="10dp"
	        android:textSize="20sp" />
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="版权"
            android:layout_marginTop="10dp"
            android:textSize="20sp"/>
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="联系方式"
            android:layout_marginTop="10dp"
            android:textSize="20sp"/>
        
    </LinearLayout>
    
    
     <LinearLayout 
        android:id="@+id/ll_version2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/ll_version"
        android:layout_marginLeft="20dp"
        android:orientation="vertical">
        
        <TextView
            android:id="@+id/tv_versioncode"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="版本号"
	        android:layout_marginTop="10dp"
	        android:textSize="20sp" />
        
        <TextView 
            android:id="@+id/tv_copyright"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="版权"
            android:layout_marginTop="10dp"
            android:textSize="20sp"/>
        
        <TextView 
            android:id="@+id/tv_telphone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="联系方式"
            android:layout_marginTop="10dp"
            android:textSize="20sp"/>
        
    </LinearLayout>

     <Button
         android:id="@+id/btn_fragment_version"
         android:layout_width="100dp"
         android:layout_height="wrap_content"
         android:layout_below="@+id/ll_version2"
         android:layout_marginLeft="2dp"
         android:layout_marginTop="170dp"
         android:layout_toRightOf="@+id/ll_version2"
         android:gravity="center"
         android:text="检查更新" />

</RelativeLayout>
